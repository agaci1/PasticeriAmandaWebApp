{
  "services": {
    "backend": {
      "sourceDir": "backend",
      "startCommand": "java -jar target/pasticeri-amanda-backend-0.0.1-SNAPSHOT.jar",
      "buildCommand": "mvn clean package -DskipTests",
      "envVars": {
        "SPRING_PROFILES_ACTIVE": "production",
        "PORT": "8080"
      }
    },
    "frontend": {
      "sourceDir": "frontend",
      "startCommand": "npm start",
      "buildCommand": "npm run build",
      "installCommand": "npm install",
      "envVars": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  }
} 